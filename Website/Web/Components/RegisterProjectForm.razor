@inject Republic.Web.Services.ProjectService ProjectService
@using Republic.Models

<PageTitle>Register Project</PageTitle>

<h3>Register Project</h3>

<EditForm Model="newProject" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label for="name">Name:</label>
        <InputText id="name" @bind-Value="newProject.Name" />
    </div>
    <div>
        <label for="description">Description:</label>
        <InputText id="description" @bind-Value="newProject.Description" />
    </div>
    <div>
        <label for="owner">Owner:</label>
        <InputText id="owner" @bind-Value="newProject.Owner" />
    </div>
    <button type="submit">Register</button>
</EditForm>

@code {
    private Project newProject = new Project();

    private async Task HandleValidSubmit()
    {
        await ProjectService.RegisterProjectAsync(newProject);
        newProject = new Project(); // Reset the form
    }
}
